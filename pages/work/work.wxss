/* pages/work/work.wxss */
page{
  height: 100%;
  position: relative;
  width: 100%;
}
.page {
  font-family: '微软雅黑';
  position: relative;
  height: 100%;
}
.me{
  height: 100%;
}
.add_group{
  height: 20%;
  width: 90%;
  padding: 5%;
  background: #fff;
  position: relative;
}
.add_txt{
  position: absolute;
  color: #9d9d9d;
  right: 5%;
  bottom: 5%;
  font-size: 12px;
}
.add_txt_1{
  color: #9d9d9d;
  font-size: 12px;
}
.add_group textarea{
  color: #4b4b4b;
  font-size: 12px;
  width: 100%;
  height: 100%;
  line-height: 18px;
}
.add_group_p{
  color: #9d9d9d;
  font-size: 12px;
}
.add_group_bg{
  width: 90%;
  padding: 5%;
  overflow: hidden;
  position: relative;
}
.uploadimg{
  width: 90%;
  margin-top: 5px;
}
.imgbtn{
  display: flex;
  align-content: flex-start ;
  flex-wrap: wrap;
}

.addpic{
  width: 140rpx;
  height: 140rpx;
  margin-right: 5px;
  margin-bottom: 5px;
}
.addImg{
  width: 140rpx;
  height: 140rpx;
  background: #d8d8d8;
  display: flex;
  align-items:  stretch;
}
.addImg_bg{
  width: 100%;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  margin: 1px
}
.addImg1{
  display: none;
}
.addImg icon{
  font-size: 30px;
  color: #4b4b4b;
}






/*底部按钮*/
.add-footer {
  width: 90%;
  height: 90rpx;
  display: flex;
  justify-content: flex-end;
  position: fixed;
  bottom: 0;
  background: #f5f5f5;
  z-index:20;
  color: #7b7b7b;
  padding: 0 5%;
  align-items: center;
}
.add-footer-l{
  display: flex;
  align-items: center;
}

.add-footer .button3{
  display: flex;
  font-size: 12px;
  padding: 0% 5%;
  justify-content: center;
  background: #4b4b4b;
  color: #fff;
  border-radius: 60rpx;
  align-items: center;
  height: 60rpx;
  white-space: nowrap;
  position: absolute;
}


/*弹出窗*/
.buydes-dialog-container{
    width: 100%;
    height: 100%;
    background-color:rgba(0, 0, 0, 0.5);
    position: fixed;
    z-index: 21;
    display: flex;
    justify-content: center;
    align-items: center;
    top: 0;
}
.buydes-dialog-bg{
  width:60%;
  background: #fff;
  padding: 7%;
  display: flex;
  align-items:center;
  justify-content: center;
  flex-direction:  column;

}
.buydes-b{
  display: flex;
  align-items: center;
  font-size: 14px;
  justify-content: center;
  width: 100%;
  margin: 8px auto;
  position: relative;
  flex-direction: column;
}
.buydes-b1{
  display: flex;
  align-items: center;
  font-size: 14px;
  justify-content: center;
  width: 100%;
  margin: 8px auto;
  position: relative;
}
.icon1{
  font-size: 44px;
  display:block;
  align-items: center;
}
button::after{
  border: 0;
}
.buydes-btn1,.buydes-btn2{
  border:1px solid #4b4b4b;
  border-radius: 50rpx;
  height: 75rpx;
  text-align: center;
  font-size: 14px;
  background: #4b4b4b;
  color: #fff;
  padding: 0 5%;
  white-space: nowrap;
  line-height: 75rpx;
  margin: 0 5px;
  min-width: 40%;
}

.buydes-btn2{
  color: #4b4b4b;
  background: #fff;
  border: 1px solid #eaeaea;
}
.info_success{
  width: 90%;
  padding: 7% 5%;
  background: #fff;
  position: relative;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.hide{
  display: none;
}
.show{
  display: block;
}
.m_textarea{
  overflow: hidden;
  color: #4b4b4b;
  font-size: 12px;
  width: 100%;
  height: 100%;
  line-height: 18px;
}