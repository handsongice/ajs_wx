page{
  height: 100%;
  position: relative;
  width: 100%;
}
.page {
  font-family: '微软雅黑';
  position: relative;
  height: 100%;
}

.qbdd_set{
  background: #fff;
  width: auto;
  font-size: 12px;
  color: #4b4b4b;
  padding: 0% 7%;
  height: 85rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.icon1{
  font-size: 20px;
  color: #4b4b4b;
  display: flex;
}
.icon2{
  font-size: 22px;
  color:rgba(255,255,255,0.5);
  line-height: 30px;
}
.set_df{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.w_s{
  white-space: nowrap;
}

.login{
  display: flex;
  font-size: 14px;
  justify-content: center;
  background: #4b4b4b;
  color: #fff;
  border-radius: 60rpx;
  align-items: center;
  height: 75rpx;
  width: 80%;
  margin: 0 auto;

}