/* pages/user/newsshow.wxss */
page{
  height: 100%;
  position: relative;
  width: 100%;
}
.page {
  font-family: '微软雅黑';
  position: relative;
  height: 100%;
}
.newsshow{
  display: flex;
  align-items: flex-start;
  position: relative;
}
.newsshow_0{
  position: relative;
}
.newsshow_1{
  display: flex;
  align-items: flex-start;
  position: relative;
  flex-direction: row-reverse;
}
.newsshow_2{
  display: flex;
  align-items: flex-end;
  flex-direction: row-reverse;
}
.newsshow_3{
  display: flex;
  align-items: flex-start;
}
.newsshow_up{
  position: absolute;
  height: 0;
  width: 0;
  border-top: 20rpx solid transparent;
  border-bottom:20rpx solid transparent;
  border-right: 20rpx solid #d5d5d5;
  top:28rpx;
  left:-18rpx;
  z-index: 3;
}
.newsshow_up_1{
  position: absolute;
  height: 0;
  width: 0;
  border-top: 20rpx solid transparent;
  border-bottom:20rpx solid transparent;
  border-left: 20rpx solid #fff;
  top:28rpx;
  right:-18rpx;
  z-index: 3;
}
.newsshow_date{
 color: #4b4b4b;
 padding: 45rpx 3% 0 0;
 display: flex;
 align-items: flex-end ;
 flex-direction:  column;
 width: 15%;
 line-height: 16px;

}
.newsshow_r{
  width: 60%;
  padding: 5% 5% 0 5%;
}

.newsshow_list{
  color: #4b4b4b;
  font-size: 12px;
  line-height: 18px;
  padding:8%;
  border-radius: 10px;
  background: #d5d5d5;
  position: relative;
}
.newsshow_list_1{
  color: #4b4b4b;
  font-size: 12px;
  line-height: 18px;
  padding:8%;
  border-radius: 10px;
  background: #fff;
  position: relative;
}
.newsshow_img{
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
}
.newsshow_img image{
  border-radius: 10px;
  max-width:100px;
  max-height:100px;
  min-height: 50px;
  min-width: 50px;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  flex-grow: 1;
}
.newsshow_txt{
  padding: 0 10% 0 4%;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  display: box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
}
.newsshow_txt_1{
  padding: 0 10% 0 4%;
}
.newsshow_txt_df{
  display: flex;
  align-items: center;
}
.newsshow_txt_dfs{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.icon4{
  font-size: 22px;
  color:#767676;
  display: flex;
}
.newsshow-head,.newsshow-head_1{
  display: flex;
  align-items: center;
  padding: 45rpx 1% 0 0;
  width: 17%;
  justify-content:flex-end;
}
.newsshow-head_1{
  justify-content:flex-start;
}
.newsshow-avatar {
  display: block;
  width: 85rpx;
  height: 85rpx;
  border-radius: 100rpx;
  background: #eaeaea;
  position:  relative;
  overflow: hidden;
}
.newsshow-avatar-bg{
  width: 85rpx;
  height: 85rpx;
  display: block;
}
.newsshow_name{
  height: 85rpx;
  line-height: 85rpx;
  color: #4b4b4b;
  font-size: 16px;
  padding:0 10% 0 4%;

}
.newsshow-avatar_1 {
  display: block;
  width: 65rpx;
  height: 65rpx;
  border-radius: 100rpx;
  background: #eaeaea;
  position:  relative;
  overflow: hidden;
}
.newsshow-avatar-bg_1{
  width: 65rpx;
  height: 65rpx;
  display: block;
}
.newsshow_name_1{
  height: 65rpx;
  line-height: 65rpx;
  color: #4b4b4b;
  font-size: 16px;
  padding:0 10% 0 4%;

}
.newsshow_date_end{
 padding: 4% 10%;
 width: 80%;
 font-size: 12px;
 color: #7b7b7b;
 display: flex;
 align-items: center;
 justify-content: center;
}
.newsshow_date_end_1{
 padding: 0 10% 0 0;
}
/*底部按钮*/
.news-footer {
  width: 90%;
  height: 90rpx;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  background: #f5f5f5;
  z-index:20;
  color: #7b7b7b;
  padding: 0 5%;
  align-items: center;
  display: flex;
}
.news-footer_bg{
  height: 65rpx;
  position: relative;
  display: flex;
  align-items: center;
  flex-grow: 1;
}
.news-footer_bg_1{
  width: 70%;
  height: 100%;
  border: 1px solid #eaeaea;
  background: #fff;
  border-radius: 60rpx;
  padding: 0% 25% 0% 5%;
  font-size: 12px;
  white-space: nowrap;
}
.news-footer_bg_1 input{
  color: #7b7b7b;
  font-size: 12px;
  width: 100%;
}
.news-footer-l{
  display: flex;
  align-items: center;
}

.news-footer .button3{
  display: flex;
  font-size: 12px;
  padding: 0% 5%;
  justify-content: center;
  background: #4b4b4b;
  color: #fff;
  border-radius: 60rpx;
  align-items: center;
  height: 60rpx;
  position: absolute;
  z-index: 21;
  right: 0;
  border: 1px solid #4b4b4b;

}
.c_b60{
  clear: both;
  height: 90rpx;
  width: 100%;
  margin-bottom: 5px;
}
.hide{
  display: none;
}
.show{
  display: flex;
}
/*弹出窗*/
.buydes-dialog-container{
    width: 100%;
    height: 100%;
    background-color:rgba(7, 7, 7, 1);
    position: fixed;
    z-index: 21;
    display: flex;
    justify-content: center;
    align-items: center;
    top: 0;
}
.buydes-dialog-bg{
  width:100%;
  display: flex;
  align-items:center;
  justify-content: center;
}
.buydes-b{
  display: flex;
  align-items: center;
  font-size: 14px;
  justify-content: center;
  width: 100%;
  margin: 8px auto;
  position: relative;
  flex-direction: column;
}
.buydes-b1{
  display: flex;
  align-items: center;
  font-size: 14px;
  justify-content: center;
  width: 100%;
  margin: 8px auto;
  position: relative;
}