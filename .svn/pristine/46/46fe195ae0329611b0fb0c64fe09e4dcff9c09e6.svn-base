/* pages/group/group.wxss */
page{
  height: 100%;
  position: relative;
  width: 100%;
}
.page {
  font-family: '微软雅黑';
  position: relative;
  height: 100%;
}
.personhead{
  position: relative;
  color: #4b4b4b;
  height: 273rpx;
  display: flex;
  align-items: flex-start;
  justify-content: center;
}
.personhead-bg{ 
  position: absolute;
  z-index: 1; 
  width: 100%; 
  height: 100%; 
  }
.personhead-bg-b{
  position: absolute;
  bottom: 0;
  height: 50%;
  z-index: 2;
  width: 86%;
  padding: 0 7%;
  display: flex;
  align-items: center;
  font-size: 46rpx;
  color: #fff;
  justify-content:space-between;
}


.group{
  display: flex;
  align-items: flex-start;
  position: relative;
  background: #fff;
  margin-bottom: 5px;
}
.group_date{
 color: #4b4b4b;
 padding: 45rpx 3% 0 0;
 display: flex;
 align-items: flex-end ;
 flex-direction:  column;
 width: 15%;
 line-height: 16px;

}
.group_r{
  width: 82%;
}
.group_list{
  color: #7b7b7b;
  border-bottom: 1px solid #eaeaea;
  font-size: 12px;
  line-height: 18px;
  padding: 45rpx 0;
}
.group_list:last-child{
  border: 0;
}
.group_txt{
  padding: 0 10% 0 4%;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  display: box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
}
.group_txt_df{
  display: flex;
  align-items: center;
}
.group_txt_dfs{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.group_img{
  padding: 4% 10% 0 4%;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  position: relative;
  align-items: center;
}
.group_img_list{
  width: 32%;
  height: 32%;
  display: block;
  margin:0 2% 0 0; 
  position: relative;
}
.group_img_list:nth-child(3n){
  margin: 0;
}
.group_img_list:nth-child(n+4){
  margin-top: 2%;
}
.group_img image{
  width: 170rpx;
  height: 170rpx;
}
.grouphead_txt{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  color: rgba(255,255,255,0.3);
  margin:0 -2% 0 0; 
}
.icon2{
  font-size: 22px;
  color:rgba(255,255,255,0.5);
  line-height: 30px;
}
.icon3{
  font-size: 18px;
  color:rgba(123,123,123,1);
  display: flex;
}
.group-head{
  display: flex;
  align-items: center;
  padding: 45rpx 1% 0 0;
  width: 17%;
  justify-content:flex-end;
}
.group-avatar {
  display: block;
  width: 85rpx;
  height: 85rpx;
  border-radius: 100rpx;
  background: #eaeaea;
  position:  relative;
  overflow: hidden;
}
.group-avatar-bg{
  width: 85rpx;
  height: 85rpx;
  display: block;
}
.group_name{
  height: 85rpx;
  line-height: 85rpx;
  color: #4b4b4b;
  font-size: 16px;
  padding:0 10% 0 4%;

}
.group_date_end{
 padding: 4% 10% 0 4%;
}