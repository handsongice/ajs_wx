/* pages/login/login_d.wxss */
page{
  height: 100%;
  position: relative;
  width: 100%;
}
.page {
  font-family: '微软雅黑';
  position: relative;
  height: 100%;
}
.me{
  height: 100%;
}
.userinfo{
  position: relative;
  color: #4b4b4b;
  height: 448rpx;
  display: flex;
  align-items: flex-start;
  justify-content: center;
}
.userinfo-bg{ 
  position: absolute;
  z-index: 1; 
  width: 100%; 
  height: 100%; 
  }

.sc{
  background: #fff;
  width: 100%;
  font-size: 12px;
  line-height: 16px;
  color: #666;
}
.login_qbdd{
  background: #fff;
  width: auto;
  font-size: 12px;
  color: #666;
  padding: 0 7%;
  height: 85rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.login_qbdd input{
  color: #7b7b7b;
  font-size: 12px;
  height: 85rpx;
  line-height: 85rpx;
}
.login_code,.login_code_1{
  display: flex;
  font-size: 12px;
  padding: 0% 5%;
  justify-content: center;
  background: #4b4b4b;
  color: #fff;
  border-radius: 60rpx;
  align-items: center;
  height: 60rpx;
  white-space: nowrap;
}
.login_code_1{
  background: #9d9d9d;
}
.login{
  display: flex;
  font-size: 14px;
  justify-content: center;
  background: #4b4b4b;
  color: #fff;
  border-radius: 60rpx;
  align-items: center;
  height: 75rpx;
  width: 80%;
  margin: 0 auto;

}
.icon1{
  font-size: 22px;
  color: #7b7b7b;
  line-height: 32px;
}
.icon2{
  font-size: 22px;
  color:rgba(255,255,255,0.5);
  line-height: 30px;
}
.df_1 view{
  position: relative;
}

.w_s{
  white-space: nowrap;
}
.hide{
  display: none;
}
.show{
  display: flex;
}
.password_txt{
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 12px;
  z-index: 2;
  color: #b28147;
  padding: 0 5% 2% 0
}
.remark{
  font-size: 12px;
  text-align: center;
  color: #7b7b7b;
}

/*弹出窗*/
.buydes-dialog-container{
    width: 100%;
    height: 100%;
    background-color:rgba(0, 0, 0, 0.5);
    position: fixed;
    z-index: 21;
    display: flex;
    justify-content: center;
    align-items: center;
    top: 0;
}
.buydes-dialog-bg{
  width:60%;
  background: #fff;
  padding: 7%;
  display: flex;
  align-items:center;
  justify-content: center;
  flex-direction:  column;

}
.buydes-b{
  display: flex;
  align-items: center;
  font-size: 14px;
  justify-content: center;
  width: 100%;
  margin: 8px auto;
  position: relative;
  flex-direction: column;
}
.buydes-b1{
  display: flex;
  align-items: center;
  font-size: 14px;
  justify-content: center;
  width: 100%;
  margin: 8px auto;
  position: relative;
}
.icon1{
  font-size: 44px;
  display:block;
  align-items: center;
}
button::after{
  border: 0;
}
.buydes-btn1,.buydes-btn2{
  border:1px solid #4b4b4b;
  border-radius: 50rpx;
  height: 75rpx;
  text-align: center;
  font-size: 14px;
  background: #4b4b4b;
  color: #fff;
  padding: 0 5%;
  white-space: nowrap;
  line-height: 75rpx;
  margin: 0 5px;
  min-width: 40%;
}

.buydes-btn2{
  color: #4b4b4b;
  background: #fff;
  border: 1px solid #eaeaea;
}
.forget{
  font-size: 12px;
  color: #b28147;
  padding: 3% 10%;
  width: 70%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
}